{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "pagerduty-oncall",
  "title": "Pagerduty On-call",
  "description": "View your recent past, current and upcoming on-call schedules",
  "icon": "extension_icon.png",
  "author": "Raphael",
  "license": "MIT",
  "keywords": [
    "pagerduty",
    "oncall",
    "schedule",
    "monitoring",
    "devops"
  ],
  "categories": [
    "Developer Tools",
    "Productivity"
  ],
  "commands": [
    {
      "name": "oncall-schedule",
      "title": "View On-call Schedule",
      "subtitle": "PagerDuty",
      "description": "View your recent past, current and upcoming on-call schedules",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "apiToken",
      "type": "password",
      "required": true,
      "title": "PagerDuty API Token",
      "description": "Your PagerDuty API token with read access",
      "placeholder": "Enter your API token"
    },
    {
      "name": "userEmail",
      "type": "textfield",
      "required": true,
      "title": "User Email",
      "description": "Your PagerDuty account email address",
      "placeholder": "user@company.com"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.101.1",
    "@raycast/utils": "^1.17.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^2.0.4",
    "@types/node": "22.13.10",
    "@types/react": "19.0.10",
    "eslint": "^9.22.0",
    "prettier": "^3.5.3",
    "typescript": "^5.8.2"
  },
  "scripts": {
    "build": "ray build",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}
